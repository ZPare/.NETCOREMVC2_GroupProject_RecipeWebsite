<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap-4.1.3-dist/css/bootstrap.css" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/css/imagestyles.css" />
    <style>
        .input-validation-error{border-color: red; background-color: #fee;}
    </style>
</head>
<body class="m-1 p-1">
    <div class="bg-dark text-white p-2"><h3>@ViewBag.Title</h3></div>
    <a class="button1" asp-action="Logout" asp-controller="Account">Log Out</a>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</body>
</html>
