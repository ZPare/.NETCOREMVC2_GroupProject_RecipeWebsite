@model AddedRecipes
@{ 
    ViewBag.Title = "Edit or Update Recipe";
    Layout = "_AdminLayout";
}
<form asp-action="Update" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="RecipeID" />
    <div class="form-group">
        <label asp-for="recipename">Recipe Name</label>
        <div><span asp-validation-for="recipename" class="text-danger"></span></div>
        <input type="text" asp-for="recipename" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ingredient1">First Ingredient: </label>
        <input type="text" asp-for="ingredient1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ingredient2">Second Ingredient: </label>
        <input asp-for="ingredient2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ingredient3">Third Ingredient: </label>
        <input type="text" asp-for="ingredient3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ingredient4">Fourth Ingredient: </label>
        <input type="text" asp-for="ingredient4" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ingredient5">Fifth Ingredient: </label>
        <input type="text" asp-for="ingredient5" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="description">Description</label>
        <div><span asp-validation-for="description" class="text-danger"></span></div>
        <textarea asp-for="description" class="form-control"></textarea>
    </div>
    <div class="text-center">
        <button class="button1" type="submit">Save</button>
        <a asp-action="Index" asp-controller="Home" class="button1">Cancel</a>
    </div>
</form>
